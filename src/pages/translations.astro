---
import { getCollection } from 'astro:content';
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import TranslationsPreview from '../components/TranslationsPreview.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = (await getCollection('translations')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<BaseLayout
	title="תרגומים | GerOriki"
	description="Learn about Jeanine White's most recent projects"
>
	<div class="stack gap-20" dir="rtl">
		<main class="wrapper stack gap-8">
			<Hero
				title="התרגומים שלי"
				tagline="כאן ניתן להוריד את כל התרגומים למפות, מודים וחבילות הנתונים שתרגמתי למיינקראפט"
				align="start"
			/>
			<Grid variant="offset">
				{
					projects.map((project) => (
						<li>
							<TranslationsPreview project={project} />
						</li>
					))
				}
			</Grid>
		</main>
	</div>
</BaseLayout>
