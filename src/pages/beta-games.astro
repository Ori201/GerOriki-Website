---
import { getCollection } from 'astro:content';
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import BetaPreview from '../components/BetaPreview.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = (await getCollection('betaGames')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<BaseLayout
	title="Beta Games | GerOriki"
	description=""
>
	<div class="stack gap-20" dir="rtl">
		<main class="wrapper stack gap-8">
			<header class="hero">
				<Hero
					logo="/assets/BetaGamesLogo.png"
					tagline="כאן ניתן לראות את כל משחקי Beta Games ברובלוקס!"
					align="center"
				/>
			</header>
			<Grid variant="small">
				{
					projects.map((project) => (
						<li>
							<BetaPreview project={project} />
						</li>
					))
				}
			</Grid>
		</main>
	</div>
</BaseLayout>

<style>
	.hero {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
		margin-bottom: 2%;
	}

</style>
